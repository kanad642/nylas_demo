<div class="row">
  <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    <% if  @user %>
        <div class="well profile">
          <div class="col-sm-12">
              <div class="col-xs-12 col-sm-8">
                  <h2><%= @user.name %></h2>
                  <p><strong>Email: </strong> <%= @user.email%>  </p>
                  <p><strong>Email provider: </strong> <%= @user.email_provider%></p>
                  <p><strong>UID: </strong> <%= @user.uid%></p>
                  <p><strong>Refresh Token: </strong> <%= @user.refresh_token%></p>
                  <p><strong> Connection Date: </strong> <%=  Date.strptime(@user.email_connection_date.to_s)%></p>
              </div>
              <div class="col-xs-12 col-sm-4 text-center">
                  <figure>
                      <% if  @user.image %>
                        <img src="<%= @user.image%>" alt="rdc-ck" class="img-circle img-responsive" />
                      <% else %>
                        <img src="<%= image_url("5631356-background-image.png") %>" alt="rdc-ck" class="img-circle img-responsive" />
                      <% end %>
                  </figure>
              </div>
          </div>
          <div class="col-xs-12 divider text-center">
              <div class="col-xs-12 col-sm-4 emphasis">
                  <p><small> </small></p>
                  <%= link_to 'Mail Details', user_mail_details_path(@user.id), class: "btn btn-info btn-block", style: 'color: #ffff;' %>
              </div>
              <div class="col-xs-12 col-sm-4 emphasis">
                  <p><small> </small></p>
                  <%= link_to 'Sync Mail', user_mail_details_path(@user.id), class: "btn btn-info btn-block", style: 'color: #ffff;' %>
              </div>
              <div class="col-xs-12 col-sm-4 emphasis">
                  <p><small> </small></p>
                  <%= link_to 'Disconnect Mail', user_mail_details_path(@user.id), class: "btn btn-info btn-block", style: 'color: #ffff;' %>
              </div>
          </div>
        </div>
      <% else %>
          <div class="emphasis">
              <p><small> </small></p>
              <%= link_to 'Disconnect Mail', user_mail_details_path(@user.id), class: "btn btn-info btn-block", style: 'color: #ffff;' %>
          </div>
      <% end %>

  </div>
</div>



