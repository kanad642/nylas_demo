<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>

  <%= link_to 'Syn Email', '/auth/google', class: "btn btn-primary pull-right", style: 'color: #fff;' %>
  </h1>
</div>

<table class="table table-striped text-nowrap text-truncate user-table">
  <thead class="thead-dark">
    <tr>
      <th>Mail ID </th>
      <th>Mail from</th>
      <th>Email Description</th>
      <th>Mail Create Date</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= link_to @user.id, user_path(@user) %></td>
        <td><%= @user.name %></td>
        <td>
              <img src="<%= image_url("pexels-photo-360591.jpeg") %>" alt="rdc-ck" class="img-circle img-responsive" style= "max-width: 70px;" />
        </td>
        <td><%= @user.email %></td>
        <td><%=l @user.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      user_path(@user), :class => 'btn btn-primary' %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(@user), :class => 'btn btn-default btn-xs' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(@user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  </tbody>
</table>


