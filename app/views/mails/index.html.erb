<%- model_class = Mail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:mail_id) %></th>
      <th><%= model_class.human_attribute_name(:raw_email) %></th>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:mail_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mails.each do |mail| %>
      <tr>
        <td><%= link_to mail.id, mail_path(mail) %></td>
        <td><%= mail.mail_id %></td>
        <td><%= mail.raw_email %></td>
        <td><%= mail.from %></td>
        <td><%= mail.mail_date %></td>
        <td><%=l mail.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      mail_path(mail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mail_path(mail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mail_path(mail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mail_path,
            :class => 'btn btn-primary' %>
