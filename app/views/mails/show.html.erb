<%- model_class = Mail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:mail_id) %>:</strong></dt>
  <dd><%= @mail.mail_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:raw_email) %>:</strong></dt>
  <dd><%= @mail.raw_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @mail.from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mail_date) %>:</strong></dt>
  <dd><%= @mail.mail_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              mails_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mail_path(@mail), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mail_path(@mail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
